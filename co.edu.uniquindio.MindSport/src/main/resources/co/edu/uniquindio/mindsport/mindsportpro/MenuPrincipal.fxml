<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.mindsport.mindsportpro.controller.MenuPrincipalController">
   <children>
      <VBox alignment="CENTER" layoutX="100.0" layoutY="50.0" prefHeight="400.0" prefWidth="400.0" spacing="20.0">
         <children>
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="MindSport Pro" />
            <Label fx:id="lblBienvenida" style="-fx-font-size: 16px;" text="Bienvenido" />
            
            <Separator prefWidth="300.0" />
            
            <VBox fx:id="vboxOpciones" alignment="CENTER" spacing="15.0">
               <!-- Los botones se agregarán dinámicamente según el rol -->
            </VBox>
            
            <Separator prefWidth="300.0" />
            
            <Button fx:id="btnCerrarSesion" onAction="#onCerrarSesion" prefWidth="200.0" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="Cerrar Sesión" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>


