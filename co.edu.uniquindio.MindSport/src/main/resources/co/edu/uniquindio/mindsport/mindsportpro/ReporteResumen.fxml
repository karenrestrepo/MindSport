<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="760.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.mindsport.mindsportpro.controller.ReporteResumenController">
   <top>
      <VBox alignment="CENTER" spacing="4.0" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Reporte Resumen de Entrenamiento" />
            <Label fx:id="lblMensaje" style="-fx-text-fill: red;" />
         </children>
         <padding>
            <Insets bottom="10.0" top="12.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="14.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane hgap="12.0" prefHeight="330.0" prefWidth="692.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints halignment="RIGHT" minWidth="140.0" prefWidth="160.0" />
                  <ColumnConstraints minWidth="200.0" prefWidth="300.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="24.0" />
                  <RowConstraints minHeight="24.0" />
                  <RowConstraints minHeight="24.0" />
                  <RowConstraints minHeight="24.0" />
                  <RowConstraints minHeight="24.0" />
                  <RowConstraints minHeight="24.0" />
                  <RowConstraints minHeight="24.0" />
                  <RowConstraints minHeight="24.0" />
                  <RowConstraints minHeight="24.0" />
                  <RowConstraints minHeight="24.0" />
               </rowConstraints>
               <children>
                  <Label text="Cédula:" GridPane.rowIndex="0" />
                  <Label fx:id="lblCedula" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                  <Label text="Nombre:" GridPane.rowIndex="1" />
                  <Label fx:id="lblNombre" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <Label text="Perfil Deportivo:" GridPane.rowIndex="2" />
                  <Label fx:id="lblPerfil" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                  <Label text="Total de Sesiones:" GridPane.rowIndex="3" />
                  <Label fx:id="lblTotalSesiones" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                  <Label text="Puntuación Promedio:" GridPane.rowIndex="4" />
                  <Label fx:id="lblPuntuacionPromedio" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                  <Label text="Duración Promedio (min):" GridPane.rowIndex="5" />
                  <Label fx:id="lblDuracionPromedio" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                  <Label text="Tiempo Total (min):" GridPane.rowIndex="6" />
                  <Label fx:id="lblTiempoTotal" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                  <Label text="Primera Sesión:" GridPane.rowIndex="7" />
                  <Label fx:id="lblPrimeraSesion" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                  <Label text="Última Sesión:" GridPane.rowIndex="8" />
                  <Label fx:id="lblUltimaSesion" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                  <Label text="Días de Entrenamiento:" GridPane.rowIndex="9" />
                  <Label fx:id="lblDiasEntrenamiento" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="9" />
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </GridPane>

            <HBox alignment="CENTER" spacing="16.0">
               <children>
                  <StackPane prefHeight="260.0" prefWidth="340.0" HBox.hgrow="ALWAYS">
                     <children>
                        <BarChart fx:id="barMetricas" animated="false" barGap="4.0" categoryGap="12.0" prefHeight="260.0" prefWidth="340.0" title="Métricas Clave">
                          <xAxis>
                            <CategoryAxis fx:id="barEjeX" label="Métrica" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis fx:id="barEjeY" label="Valor" />
                          </yAxis>
                        </BarChart>
                     </children>
                  </StackPane>
                  <StackPane prefHeight="260.0" prefWidth="340.0" HBox.hgrow="ALWAYS">
                     <children>
                        <PieChart fx:id="pieDistribucion" labelLineLength="10.0" legendVisible="true" prefHeight="260.0" prefWidth="340.0" title="Distribución de Actividad" />
                     </children>
                  </StackPane>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </HBox>

         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnVolverMenu" mnemonicParsing="false" onAction="#onVolverMenu" prefWidth="200.0" style="-fx-font-size: 14px;" text="Volver al Menú" />
         </children>
         <padding>
            <Insets bottom="14.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
